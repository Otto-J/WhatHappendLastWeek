{
  "name": "elysia_docker",
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "dev": "DEBUG=* bun --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir ./dist",
    "update-json": "bun run ./scripts/updateWeeklyJson.ts",
    "download-mp3s": "bun run ./scripts/downloadMp3sToLocal.ts",
    "start": "NODE_ENV=production bun dist/index.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "bun test",
    "docker:build": "docker build -t elysia_docker:latest -t elysia_docker:$(date +%Y%m%d%H) .",
    "docker:run": "docker run -d -p 3000:3000 --name elysia_docker  elysia_docker:latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.821.0",
    "@types/debug": "^4.1.12",
    "dayjs": "^1.11.13",
    "elysia": "^1.3.1",
    "jstoxml": "^7.0.1",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.1",
    "@types/bun": "latest",
    "@types/node": "^22.15.29",
    "eslint": "^9.27.0"
  }
}
